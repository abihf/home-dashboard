		"@tailwindcss/vite": "^4.0.7",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.4",
		"systeminformation": "^5.21.17",
		"tailwindcss": "^4.0.7",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
